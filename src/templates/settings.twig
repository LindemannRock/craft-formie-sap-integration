{% import "_includes/forms" as forms %}

<fieldset style="margin-top: 0;">
	<h2>{{ 'General Settings'|t('formie-sap-integration') }}</h2>

	{{ forms.textField({
        label: 'Plugin Name'|t('formie-sap-integration'),
        instructions: 'The public-facing name of the plugin'|t('formie-sap-integration'),
        id: 'pluginName',
        name: 'pluginName',
        value: settings.pluginName ?? 'Formie SAP Integration',
        placeholder: 'Formie SAP Integration',
        warning: settings.isOverriddenByConfig('pluginName') ? 'This is being overridden by the `pluginName` setting in the `config/formie-sap-integration.php` file.'|t('formie-sap-integration'),
        disabled: settings.isOverriddenByConfig('pluginName')
    }) }}
</fieldset>

<hr>

<fieldset>
	<h2>{{ 'Integration Information'|t('formie-sap-integration') }}</h2>

	<div class="field">
		<div class="heading">
			<label>{{ 'SAP Integration Status'|t('formie-sap-integration') }}</label>
		</div>
		<div class="input">
			<p class="light">
				{{ 'This plugin provides the SAP Cloud CRM integration for Formie forms. Configure the integration settings within each form\'s Integrations tab.'|t('formie-sap-integration') }}
            </p>
            <p class="light">
                <strong>{{ 'Integration Location'|t('formie-sap-integration') }}:</strong>
                {{ 'Forms → [Form Name] → Integrations → CRM → SAP Cloud'|t('formie-sap-integration') }}
            </p>
        </div>
    </div>

    <div class="field">
        <div class="heading">
            <label>{{ 'Documentation'|t('formie-sap-integration') }}</label>
        </div>
        <div class="input">
            <p class="light">
                {{ 'For setup instructions and API testing, see:'|t('formie-sap-integration') }}
            </p>
            <ul>
                <li><code>SAP_API_TEST_GUIDE.md</code> - {{ 'API testing and troubleshooting'|t('formie-sap-integration') }}</li>
                <li><code>.env.example</code> - {{ 'Environment variable examples'|t('formie-sap-integration') }}</li>
            </ul>
        </div>
    </div>
</fieldset>

{% include 'formie-sap-integration/_components/plugin-credit.twig' %} 
			</p>
